let mapleader=" "
syntax on
set number
set cursorline
set wrap 
set wildmenu
set tabstop=4

set hlsearch
exec "nohlsearch"
set incsearch
set ignorecase

map s <nop>
map S :w<CR>
map Q :wq<CR>
map R :source $MYVIMRC<CR>

" split 
noremap <LEADER><CR> :nohlsearch<CR>
map sl :set splitright<CR>:vsplit<CR>
map sj :set splitbelow<CR>:split<CR>

map <LEADER>h <C-w>h
map <LEADER>l <C-w>l
map <LEADER>j <C-w>j
map <LEADER>k <C-w>k

call plug#begin()
Plug 'vim-airline/vim-airline'
Plug 'connorholyday/vim-snazzy'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
call plug#end()

colorscheme snazzy
let g:SnazzyTransparent = 1


